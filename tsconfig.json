{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "plugins": [
      {
        "transform": "ts-transformer-keys/transformer"
      }
    ]
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "lib/**/*.test.ts",
    "lib/**/*.test.lib.ts"
  ]
}